nav
  border-bottom 1px dotted grey
  margin-bottom 15px
  
  > ul 
    font-size 1.4em
  
    > li
      display inline-block
      
      > a 
        display: block;
        text-decoration: none;
        text-transform capitalize
        padding: 7px 15px 3px 15px;
        color: gray;
        text-shadow: 1px 1px black;  
        margin-left: 1px;
        white-space: nowrap;
        height:30px;
        text-align:center;
 
        &:hover
          color: black
          text-shadow: 1p 1p white
 
        &:active
          color: white
          text-shadow: 1p 1p black
 

@media only screen and (max-width: 480px)
	nav > ul > li
		display block